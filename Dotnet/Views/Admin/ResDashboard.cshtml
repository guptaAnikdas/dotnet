<form action="" method="post">
    Id:
    <input type="text" placeholder="Enter your id " name="id" class="form-control" /> <br />
    Restaurant ID:
    <input type="text" name="RestaurantID" class="form-control" value="" /> <br />
    Name:
    <input type="text" placeholder="Enter the name of the food" name="name" class="form-control" /> <br />

    Quantity:
    <input type="text" placeholder="Enter the quantity" name="quantity" class="form-control" /> <br />

    Preserve:
    <input type="text" placeholder="Enter the time in mins/hrs" name="preserve" class="form-control" /> <br />

    Status:
    <select id="type" name="status" class="btn btn-secondary dropdown-toggle">
        <option value="Pickup Requested">Pickup Requested</option>
    </select> <br />

    Assign:
    <input type="text" placeholder="Not needed" name="assign" class="form-control" /> <br />



    <input type="submit" value="Request" class="btn btn-success" />
</form>



